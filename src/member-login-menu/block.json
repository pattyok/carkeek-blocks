{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "carkeek-blocks/member-login-menu",
	"version": "0.1.0",
	"title": "Header Member Login Button",
	"category": "widgets",
	"description": "Menu Button to be used in header template parts.",
	"icon": "admin-users",
	"supports": {
		"html": false,
		"color": {
			"background": true,
			"text": true
		}
	},

	"textdomain": "carkeek-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"attributes": {
		"showUserName": {
			"type": "boolean",
			"default": "true"
		},
		"label": {
			"type": "string",
			"default": "Login"
		},
		"loggedinLabel": {
			"type": "string",
			"default": "Account"
		},
		"showIcon": {
			"type": "boolean",
			"default": "true"
		},
		"alignment": {
			"type": "string",
			"default": "before"
		},
		"menuTemplate": {
			"type": "string",
			"default": "member-menu"
		},
		"layout": {
			"type": "string",
			"default": "horizontal"
		}
	}
}
